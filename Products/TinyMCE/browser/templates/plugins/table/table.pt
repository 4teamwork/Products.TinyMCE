<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html i18n:domain="tinymce" id="region-content" xmlns="http://www.w3.org/1999/xhtml" tal:define="portal_url portal_url|here/portal_url">
<head>
	<title i18n:translate="tinymce_table_dlg_title">Insert/Modify table</title>
	<script type="text/javascript" src="" tal:attributes="src string:$portal_url/++resource++tinymce.javascripts/tiny_mce_popup.js"></script>
	<script type="text/javascript" src="" tal:attributes="src string:$portal_url/++resource++tinymce.javascripts/utils/mctabs.js"></script>
	<script type="text/javascript" src="" tal:attributes="src string:$portal_url/++resource++tinymce.javascripts/utils/form_utils.js"></script>
	<script type="text/javascript" src="" tal:attributes="src string:$portal_url/++resource++tinymce.javascripts/utils/validate.js"></script>
	<script type="text/javascript" src="" tal:attributes="src string:$portal_url/++resource++tinymce.javascripts/utils/editable_selects.js"></script>
	<script type="text/javascript" src="" tal:attributes="src string:$portal_url/++resource++tinymce.javascripts/plugins/table/table.js"></script>
	<base target="_self" />
</head>
<body id="table" style="display: none">
	<div class="dialog-wrapper">
		<span style="display: none" id="tinymce_common_invalid_data" i18n:translate="tinymce_common_invalid_data">Error: Invalid values entered, these are marked in red.</span>

		<form onsubmit="insertTable();return false;" action="#">
			<ul class="formTabs"><li id="general_tab" class="formTab firstFormTab"><a href="javascript:mcTabs.displayTab('general_tab','general_panel');" onmousedown="return false;" class="selected"><span i18n:translate="tinymce_table_dlg_general_tab">General</span></a></li><li id="advanced_tab" class="formTab lastFormTab"><a href="javascript:mcTabs.displayTab('advanced_tab','advanced_panel');" onmousedown="return false;"><span i18n:translate="tinymce_table_dlg_advanced_tab">Advanced</span></a></li></ul>

			<fieldset id="general_panel" class="formPanel">
				<div class="field">
					<label id="classlabel" for="class" i18n:translate="tinymce_common_class_name">Class</label>
					<div class="widget">
						<select id="class" name="class" size="1">
							<option value="" selected i18n:translate="tinymce_common_not_set">-- Not set --</option>
						</select>
					</div>
				</div>

				<div class="field">
					<label id="colslabel" for="cols" i18n:translate="tinymce_table_dlg_cols">Cols</label>
					<div class="widget">
						<input id="cols" name="cols" type="text" value="" size="3" maxlength="3" class="required number min1" />
					</div>
				</div>

				<div class="field">
					<label id="rowslabel" for="rows" i18n:translate="tinymce_table_dlg_rows">Rows</label>
					<div class="widget">
						<input id="rows" name="rows" type="text" value="" size="3" maxlength="3" class="required number min1" />
					</div>
				</div>
	
				<div class="field">
					<label for="summary" i18n:translate="tinymce_table_dlg_summary">Summary</label> 
					<div class="widget">
						<input id="summary" name="summary" type="text" value="" size="30" /> 
					</div>
				</div>
			</fieldset>

			<fieldset id="advanced_panel" class="formPanel" style="display: none;">
				<div class="field">
					<label id="widthlabel" for="width" i18n:translate="tinymce_table_dlg_width">Width</label>
					<div class="widget">
						<input name="width" type="text" id="width" value="" size="4" maxlength="4" onchange="changedSize();" class="size" />
					</div>
				</div>

				<div class="field">
					<label id="heightlabel" for="height" i18n:translate="tinymce_table_dlg_height">Height</label>
					<div class="widget">
						<input name="height" type="text" id="height" value="" size="4" maxlength="4" onchange="changedSize();" class="size" />
					</div>
				</div>

				<div class="field">
					<label id="alignlabel" for="align" i18n:translate="tinymce_table_dlg_align">Alignment</label>
					<div class="widget">
						<select id="align" name="align">
							<option value="" i18n:translate="tinymce_common_not_set">-- Not set --</option>
							<option value="center" i18n:translate="tinymce_table_dlg_align_middle">Center</option>
							<option value="left" i18n:translate="tinymce_table_dlg_align_left">Left</option>
							<option value="right" i18n:translate="tinymce_table_dlg_align_right">Right</option>
						</select>
					</div>
				</div>
			
				<div class="field">
					<div class="widget">
						<input id="caption" name="caption" type="checkbox" /> <label for="caption" i18n:translate="tinymce_table_dlg_caption">Table caption</label> 
					</div>
				</div>
			</fieldset>	

			<div style="display: none;">
				<input type="text" id="cellpadding" name="cellpadding" value="" />
				<input type="text" id="cellspacing" name="cellspacing" value="" />
				<input type="text" id="id" name="id" value="" /> 
				<input type="text" id="style" name="style" value="" />
				<input type="text" id="lang" name="lang" value="" />
				<input type="text" id="backgroundimage" name="backgroundimage" value="" />
				<div id="backgroundimagebrowsercontainer"></div>
				<select id="frame" name="frame"><option value="" i18n:translate="tinymce_common_not_set">-- Not set --</option></select>
				<select id="rules" name="rules"><option value="" i18n:translate="tinymce_common_not_set">-- Not set --</option></select>
				<select id="dir" name="dir"><option value="" i18n:translate="tinymce_common_not_set">-- Not set --</option></select>
				<input type="text" id="border" name="border" value="" />
				<input type="text" id="bordercolor" name="bordercolor" value="" />
				<div id="bordercolor_pickcontainer"></div>
				<input type="text" id="bgcolor" name="bgcolor" value="" />
				<div id="bgcolor_pickcontainer"></div>
			</div>

			<div class="visualClear"><!-- --></div>

			<div class="mceActionPanel formControls">
				<span class="actionButtons">
					<input type="submit" class="context" id="insert" name="insert" value="Insert" i18n:attributes="value tinymce_common_insert" />
					<input type="button" class="context" id="update" name="update" value="Update" i18n:attributes="value tinymce_common_update" style="display: none"/>
					<input type="button" class="context" id="cancel" name="cancel" value="Cancel" i18n:attributes="cancel tinymce_common_cancel" onclick="tinyMCEPopup.close();" />
				</span>
			</div>
		</form>
	</div>
</body>
</html>
