<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html i18n:domain="tinymce" id="region-content" xmlns="http://www.w3.org/1999/xhtml" tal:define="portal_url portal_url|here/portal_url">
<head>
	<title i18n:translate="tinymce_table_dlg_row_title">Table row properties</title>
	<script type="text/javascript" src="" tal:attributes="src string:$portal_url/++resource++tinymce.javascripts/tiny_mce_popup.js"></script>
	<script type="text/javascript" src="" tal:attributes="src string:$portal_url/++resource++tinymce.javascripts/utils/mctabs.js"></script>
	<script type="text/javascript" src="" tal:attributes="src string:$portal_url/++resource++tinymce.javascripts/utils/form_utils.js"></script>
	<script type="text/javascript" src="" tal:attributes="src string:$portal_url/++resource++tinymce.javascripts/utils/editable_selects.js"></script>
	<script type="text/javascript" src="" tal:attributes="src string:$portal_url/++resource++tinymce.javascripts/plugins/table/row.js"></script>
	<base target="_self" />
</head>
<body id="tablerow" style="display: none">
	<div class="dialog-wrapper">
		<form onsubmit="updateAction();return false;">
			<ul class="formTabs"><li id="general_tab" class="formTab firstFormTab"><a href="javascript:mcTabs.displayTab('general_tab','general_panel');" onmousedown="return false;" class="selected"><span i18n:translate="tinymce_table_dlg_general_tab">General</span></a></li><li id="advanced_tab" class="formTab lastFormTab"><a href="javascript:mcTabs.displayTab('advanced_tab','advanced_panel');" onmousedown="return false;"><span i18n:translate="tinymce_table_dlg_advanced_tab">Advanced</span></a></li></ul>
			<fieldset id="general_panel" class="formPanel">

				<div class="field">
					<label for="height" i18n:translate="tinymce_table_dlg_height">Height</label>
					<div class="widget">
						<input name="height" type="text" id="height" value="" size="4" maxlength="4" onchange="changedSize();" />
					</div>
				</div>

				<div class="field">
					<label for="valign" i18n:translate="tinymce_table_dlg_valign">Vertical alignment</label>
					<div class="widget">
						<select id="valign" name="valign">
							<option value="" i18n:translate="tinymce_common_not_set">-- Not set --</option>
							<option value="top" i18n:translate="tinymce_table_dlg_align_top">Top</option>
							<option value="middle" i18n:translate="tinymce_table_dlg_align_middle">Center</option>
							<option value="bottom" i18n:translate="tinymce_table_dlg_align_bottom">Bottom</option>
						</select>
					</div>
				</div>
			</fieldset>

			<fieldset id="advanced_panel" class="formPanel" style="display: none;">
				<div class="field">
					<label for="rowtype" i18n:translate="tinymce_table_dlg_rowtype">Row in table part</label>
					<div class="widget">
						<select id="rowtype" name="rowtype" class="mceFocus">
							<option value="thead" i18n:translate="tinymce_table_dlg_thead">Table Head</option>
							<option value="tbody" i18n:translate="tinymce_table_dlg_tbody">Table Body</option>
							<option value="tfoot" i18n:translate="tinymce_table_dlg_tfoot">Table Foot</option>
						</select>
					</div>
				</div>

				<div class="field">
					<label for="action" i18n:translate="tinymce_table_dlg_row_title">Table row properties</label>
					<div class="widget">
						<select id="action" name="action">
							<option value="row" i18n:translate="tinymce_table_dlg_row_row">Update current row</option>
							<option value="odd" i18n:translate="tinymce_table_dlg_row_odd">Update odd rows in table</option>
							<option value="even" i18n:translate="tinymce_table_dlg_row_even">Update even rows in table</option>
							<option value="all" i18n:translate="tinymce_table_dlg_row_all">Update all rows in table</option>
						</select>
					</div>
				</div>
			</fieldset>

			<div style="display: none;">
				<input id="id" name="id" type="text" value="" />
				<input type="text" id="style" name="style" value="" />
				<select id="dir" name="dir"><option value="" i18n:translate="tinymce_common_not_set">-- Not set --</option></select>
				<input id="lang" name="lang" type="text" value="" />
				<input id="backgroundimage" name="backgroundimage" type="text" value="" />
				<div id="backgroundimagebrowsercontainer"></div>
				<input id="bgcolor" name="bgcolor" type="text" value="" />
				<div id="bgcolor_pickcontainer"></div>
			</div>

			<div class="visualClear"><!-- --></div>
	
			<div class="mceActionPanel formControls">
				<span class="actionButtons">
					<input type="submit" id="insert" class="context" name="insert" value="Update" i18n:attributes="tinymce_common_update" />
					<input type="button" id="cancel" class="context" name="cancel" value="Cancel" i18n:attributes="tinymce_common_cancel" onclick="tinyMCEPopup.close();" />
				</span>
			</div>
		</form>
	</div>
</body>
</html>
