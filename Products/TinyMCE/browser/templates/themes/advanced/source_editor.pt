<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html i18n:domain="tinymce" id="region-content" xmlns="http://www.w3.org/1999/xhtml" tal:define="portal_url portal_url|here/portal_url">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
	<title i18n:translate="tinymce_advanced_dlg_code_title">HTML Source Editor</title>
	<script type="text/javascript" src="" tal:attributes="src string:$portal_url/++resource++tinymce.javascripts/tiny_mce_popup.js"></script>
	<script type="text/javascript" src="" tal:attributes="src string:$portal_url/++resource++tinymce.javascripts/themes/advanced/source_editor.js"></script>
	<base target="_self" />
</head>
<body onresize="resizeInputs();" style="display:none; overflow:hidden;">
	<div class="dialog-wrapper">
		<form name="source" onsubmit="saveContent();return false;" action="#">
			<fieldset>
				<legend i18n:translate="tinymce_advanced_dlg_code_title">HTML Source Editor</legend>
				<div class="field">
					<label for="htmlSource" tinymce_advanced_dlg_code_title">HTML Source Editor</label>
					<div class="widget">
						<textarea name="htmlSource" id="htmlSource" rows="18" cols="100" style="" wrap="off" class="mceFocus"></textarea>
					</div>
				</div>

				<div class="field">
					<div class="widget">
						<input name="wraped" id="wraped" onclick="toggleWordWrap(this);" checked="checked" type="checkbox">
						<label for="wraped" i18n:translate="tinymce_advanced_dlg_code_wordwrap">Word wrap</label>
					</div>
				</div>
			</fieldset>

			<div class="visualClear"><!-- --></div>

			<div class="mceActionPanel formControls">
				<span class="actionButtons">
					<input type="submit" id="insert" class="context" name="insert" value="Update" i18n:attributes="value tinymce_common_update" />
					<input type="button" id="cancel" class="context" name="cancel" value="Cancel" i18n:attributes="value tinymce_common_cancel" onclick="tinyMCEPopup.close();" />
				</span>
			</div>
		</form>
	</div>
</body>
</html>
